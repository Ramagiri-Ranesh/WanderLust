<% layout('/layouts/boilerplate.ejs') -%>
<body>
    <div class="row mt-2">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Edit your Listing</h3>
            <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate class="needs-validation">
                <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" value="<%= listing.title %>" name="listings[title]" class="form-control" id="title" required>
                             <div class="invalid-feedback">Title is required field</div>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea name="listings[description]" id="description" type="text" class="form-control" required><%= listing.description %></textarea>
                            <div class="invalid-feedback">Description is required field</div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-3">
                                <label for="price" class="form-label">Price</label>
                                <input type="number" value="<%= listing.price %>" name="listings[price]" id="price" class="form-control" required>
                                <div class="invalid-feedback">Price is required field</div>
                            </div>
                            <div class="mb-3 col-md-9">
                                <label for="image" class="form-label">Image/url</label>
                                <input type="text" value="<%= listing.image %>" name="listings[image]" id="image" class="form-control" required>
                                <div class="invalid-feedback">Image is required field</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label for="location" class="form-label">Location</label>
                                <input type="text" value="<%= listing.location %>" name="listings[location]" id="location" class="form-control" required>
                                <div class="invalid-feedback">Location is required field</div>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label for="country" class="form-label">Country</label>
                                <input type="text" value="<%= listing.country %>" name="listings[country]" id="country" class="form-control" required>
                                <div class="invalid-feedback">Country is required field</div>
                            </div>
                        </div>
                <button class="btn btn-dark btn-edit mt-2">Edit</button>
            </form>
        </div>
   </div>
</body>